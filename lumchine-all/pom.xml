<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>lumchine-all</artifactId>
    <packaging>jar</packaging>

    <parent>
        <groupId>com.lumchine</groupId>
        <artifactId>lumchine</artifactId>
        <version>0.1.0</version>
    </parent>

    <dependencies>

        <dependency>
            <groupId>com.lumchine</groupId>
            <artifactId>lumchine-core</artifactId>
        </dependency>

        <dependency>
            <groupId>com.lumchine</groupId>
            <artifactId>lumchine-db</artifactId>
        </dependency>

        <dependency>
            <groupId>com.lumchine</groupId>
            <artifactId>lumchine-wx-api</artifactId>
        </dependency>

        <dependency>
            <groupId>com.lumchine</groupId>
            <artifactId>lumchine-admin-api</artifactId>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-resources</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/target/classes/static</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>../lumchine-admin/dist</directory>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>


        </plugins>
    </build>

</project>